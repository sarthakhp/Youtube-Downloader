<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/border_bottom_top"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/search_result_image_id"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="15sp"
            android:paddingLeft="15sp"
            android:paddingRight="15sp"
            android:paddingBottom="5sp"
            app:srcCompat="@mipmap/youtube_downloader_icon" />

        <TextView
            android:id="@+id/search_result_title_text_id"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="15sp"
            android:paddingTop="0sp"
            android:paddingEnd="0sp"
            android:paddingRight="15sp"
            android:paddingBottom="0sp"
            android:text="TextView"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/search_result_time_text_id"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="15sp"
            android:paddingRight="15sp"
            android:paddingBottom="15sp"
            android:textSize="20sp" />

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>